@import "css/normalize.css"
@import "css/skeleton.css"
@import url("https://fonts.googleapis.com/css?family=Montserrat");
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,400italic");

// Variables
bg-purple    = #f5eff8
bg-blue      = #ebf5fc
bg-turqouise = #ecfcf9
bg-yellow    = #fdf6db
bg-orange    = #fdf2df
bg-pink      = #fef1f6
bg-white     = #fff
bg-off-white = #f8f8f8

bg = bg-white

body
  background bg
  color #444
  font-weight 400
  font-family "Open Sans"

a
  color #444

#app
  margin-top 3rem
  
.container
  max-width 600px

section
  margin-bottom 6rem
  .summary
    // font-size 1.3rem
    &:last-child
      margin 0

.header
  // border-bottom 3px solid
  // padding-bottom 2rem
  
.section-head
  font-size 1.6rem
  line-height 1
  font-weight 400
  font-family "Montserrat"
  text-transform uppercase
  letter-spacing 0

.sub-header
  margin-bottom 1rem
  position relative
  &:before
    position absolute
    left -1.5rem
    content '\2022'
  span
    font-style italic
    opacity 0.6

h1
  font-weight 300
  font-size 3.8rem
  font-family "Montserrat"
  margin-bottom 0.3rem

// Tables
table
  margin -15px 0 0 0
  &.small
    font-size 1.3rem
  td
    border-bottom: 1px solid rgba(0,0,0, 0.3)

.picture-wrap
  text-align center
  margin 5rem auto 2rem
  color #777
  font-style italic
  
.picture
  max-width 140px
  border-radius 100%
  margin auto
  display block
  border 1px solid #999

// Helpers
.u-text-right
  text-align right