@import "css/normalize.css"
@import "css/skeleton.css"
@import url("https://fonts.googleapis.com/css?family=Montserrat");
@import url("https://fonts.googleapis.com/css?family=Open+Sans");

// Variables
bg-purple = #f5eff8
bg-blue   = #ebf5fc
bg-turq   = #ecfcf9
bg-yellow = #fdf6db
bg-orange = #fdf2df
bg-pink   = #fef1f6
bg-white  = #fff

bg = bg-blue

body
  background bg
  color #444
  font-weight 400
  font-family "Open Sans"

a
  color #444

#app
  margin-top 3rem
  
.container
  max-width 540px

section
  margin-bottom 5rem
  p
    font-size 1.3rem
    &:last-child
      margin 0

.header
  // border-bottom 3px solid
  // padding-bottom 2rem
  
.section-head
  font-size 1.5rem
  line-height 1
  font-weight 400
  font-family "Montserrat"
  text-transform uppercase

.sub-header
  margin-bottom 0.5rem

h1
  font-weight 300
  font-family "Montserrat"
  margin-bottom 0.3rem

// Tables
table
  margin -15px 0 0 0
  td
    border-color: #666

// Helpers
.u-text-right
  text-align right