@import "css/normalize.css"
@import "css/skeleton.css"
@import url("https://fonts.googleapis.com/css?family=Montserrat");
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,400italic");

// Variables
bg-purple    = #f5eff8
bg-blue      = #ebf5fc
bg-turqouise = #ecfcf9
bg-yellow    = #fdf6db
bg-orange    = #fdf2df
bg-pink      = #fef1f6
bg-white     = #fff
bg-off-white = #f8f8f8

bg = bg-blue

body
  background bg
  color #555
  font-weight 400
  font-family "Open Sans", Helvetica, Arial, sans-serif

a
  color #555
  text-decoration none
  border-bottom 1px solid

#app
  margin 5rem auto 0
  
.container
  max-width 600px

section
  margin-bottom 6rem
  .summary
    &:last-child
      margin 0
  
.section-head
  font-size 2rem
  line-height 1
  font-weight 400
  font-family "Montserrat", Helvetica, Arial, sans-serif
  text-transform uppercase
  letter-spacing 0

.section-sub-head
  margin-bottom 1rem
  .position
    font-style italic
    opacity 0.6
  .dates
    font-size 1.4rem
    float right

h1
  font-weight 300
  font-size 3.8rem
  font-family "Montserrat"
  margin-bottom 0.3rem
  
.highlights
  font-size: 1.3rem
  margin -1rem 0 4rem 3rem
  list-style-position outside
  &:last-child
    margin-bottom 0

.comma-list
  span:after
    content ','
  span:last-child:after
    content ''

// Tables
table
  margin -15px 0 0 0
  &.small
    font-size 1.3rem
  td
    border-bottom: 1px solid #666

.picture-wrap
  text-align center
  margin 5rem auto 0
  color #777
  font-style italic
  
.picture
  max-width 140px
  border-radius 100%
  margin auto
  display block
  border 1px solid #999

// Helpers
.u-text-right
  text-align right